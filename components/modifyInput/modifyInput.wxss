/* components/modifyInput/modifyInput.wxss */

.modify-input-wrap {
  display: flex;
  align-items: center;
  margin-bottom: 26rpx;
  font-size: 30rpx;
  color: #333;
}
.modify-input-label {
  display: inline-block;
  overflow: hidden;
  text-align: justify;
  vertical-align: top;
  height: 50rpx;
  width: 120rpx;
}
.modify-input-label::after {
  content: "";
  display: inline-block;
  width: 100%;
  height: 0;
}
.modify-input-label-wrap {
  display: flex;
  align-items: center;
  width: 180rpx;
  margin-left: 40rpx;
}
.modify-input-text-wrap {
  display: flex;
  width: 270rpx;
  height: 52rpx;
  border: 1px solid #257CE1;
  border-radius: 3px;
}
.modify-input {
  margin-left: 20rpx;
}
.modify-btn {
  margin-left: 16rpx;
  font-size: 22rpx;
  color: #999;
}
