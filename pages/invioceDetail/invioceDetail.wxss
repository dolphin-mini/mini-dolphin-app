/* pages/invioceDetail/invioceDetail.wxss */
.content-wrap {
  margin: 0 62rpx;
  
}
.content-title {
  margin: 120rpx 0 66rpx 0;
  text-align: center;
  font-size: 30rpx;
  color:#5EA2F2;
}
.list {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  padding: 0 22rpx;
  font-size: 26rpx;
  color: #999;
}
.list-title {
  display: inline-block;
  text-align: justify;
  overflow:hidden;
  width: 120rpx;
  height: 40rpx;
  color: #333;
  font-size: 30rpx;
}
.list-item-content-wrap {
  display: flex;
  align-items: center;
  padding-left: 54rpx;
  color: #666;
}
.list-title::after {
  content: "";
  display:inline-block;
  width:100%;
  height:0;
}
.footer-wrap {
  position: absolute;
  bottom: 70rpx;
  display: flex;
  padding: 0 30rpx;
  width: calc(100% - 60rpx);
}
.footer-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(to right, #4D9BFD , #496AF2);
  box-shadow: 1px 5px 15px rgba(37, 124, 255, 0.47);
  font-size: 30rpx;
  height: 90rpx;
  width: 326rpx;
}
.mini-btn{
  margin-right: 5px;
}