/* pages/recharge/recharge.wxss */
page {
  background: #F2F3F5;
}
.card {
  margin: 30rpx;
  
  height: 669rpx;
  background:#fff;
  box-shadow:0rpx 10rpx 19rpx 2rpx rgba(204,204,204,0.47);
  border-radius:10rpx;
}
.logoWrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 23rpx 0;
  background:rgba(193,193,193,0.1);
}
.logo {
  width: 120rpx;
  height: 120rpx;
}
.logoText {
  margin-top: 14rpx;
  line-height: 32rpx;
  font-size: 32rpx;
  color: #257CE1;
}
.content {
  margin-top: 30rpx;
  padding: 0rpx 18rpx 0 19rpx;
}
.title {
  line-height: 32rpx;
  font-size: 32rpx;
  color: #666;
}
.payWrap {
  display: flex;
  position: relative;
  margin-top: -14rpx;
}
.payWrap::after {
  content: "";
  position: absolute;
  bottom: 24rpx;
  border-bottom: 1px solid #ccc;
  height: 0;
  width: 100%;
}
.moneySymbol {
  display: flex;
  align-items: center;
  padding-right: 10rpx;
}
.money, .moneySymbol {
  font-size: 60rpx;
}
.money {
  width: 100%;
}
.cards {
  font-size: 32rpx;
  color: #257CE1;
}
.btnWrap {
  margin-top: 40rpx;
  padding: 0rpx 18rpx 0 19rpx;
}

/* modal */

.modal-box{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.4);
  overflow: hidden;
  z-index: 99999999;
  }

.modal-body{
  margin: 0 42rpx;
  padding: 20rpx;
  position:relative;
  top: 50%;
  transform: translateY(-50%);
  /* height:520rpx; */
  background:rgba(255,255,255,1);
  border-radius:30rpx;
}

.modal-head {
  padding-bottom: 13rpx;
  border-bottom: 1px solid #ccc;
}
.modal-head::after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #ccc;
  color: #e5e5e5;
  transform-origin: 0 100%;
  transform: scaleY(0.5);

}
.modal-close {
  position: absolute;
  top: 30rpx;
}
.modal-title {
 
  text-align: center;  
  font-size: 40rpx;
  
}

.modal-content{
  margin:48rpx 22rpx 42rpx 22rpx;
  border-radius: 10rpx;
}

