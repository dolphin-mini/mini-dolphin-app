/* content style */

.content-wrap {
  padding: 0 29rpx;
}
.content-title {
  font-size:36rpx;
  line-height: 36rpx;
  color:rgba(37,124,225,1);
}
.oil-type {
  display: flex;
  justify-content: space-between;
  margin-top: 29rpx;
}
.oil-type-item {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 125rpx;
  height: 60rpx;
  font-size: 30rpx;
  color:#257CE1;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  margin-right: 15rpx;
}
.oil-type-checked {
  border: 1px dashed rgba(9,99,221,1);
}
.oil-type-item:last-child {
  margin-right: 0rpx;
}
.oilgun-type {
  display: flex;
  align-content: space-between;
  flex-wrap: wrap;
  margin-top: 30rpx;
}
.oilgun-type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width:158rpx;
  height:158rpx;
  background:#fff;
  border-radius:10px;
  margin-left: 10rpx;
  margin-bottom: 30rpx;
   color: #257CE1;
}
.oilgun-checked {
  background:linear-gradient(90deg,rgba(77,155,253,1),rgba(73,106,242,1));
  box-shadow:0rpx 10rpx 19rpx 2rpx rgba(37,124,225,0.47);
  color: #fefefe;
}
.oilgun-type-text {
  font-size: 48rpx;
}
.oilgun-type-oil {
  font-size: 30rpx;
}
/* 输入框 */
.input-wrap {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
  height: 90rpx;
  background:rgba(255,255,255,1);
  border-radius:10rpx;
}
.label-text {
  padding-left: 26rpx;
  font-size: 30rpx;
  color: #666;
}
.input-text {
  width: 65%;
}
.input-suffix {
  font-size: 30rpx;
  color: #999;
}
.price-card {
  display: flex;
  justify-content: space-between;
  margin-top: 31rpx;
}
.price-card-item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 216rpx;
  height: 101rpx;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(37,124,225,1);
  border-radius:5rpx;
  font-size: 36rpx;
  color: #999;
}
.price-card-checked {
  border: 1rpx dashed rgba(37,124,225,1);
}
.submit-wrap {
  padding: 60rpx 30rpx;
}
