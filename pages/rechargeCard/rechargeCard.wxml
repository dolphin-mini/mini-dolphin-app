<!--pages/rechargeCard/rechargeCard.wxml-->
<view class="page">
  <view class="card">
    <view class="logoWrap">
      <image class="logo" src="../../images/recharge/recharge_logo.png" />
      <text class="logoText">小海豚加油站J</text>
    </view>

    <view class="content">
      <text class="title">储蓄卡充值</text>
      <view class="weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">请输入卡号：</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" placeholder="请输入充值卡卡号"/>
          </view>
        </view>
      </view>
     
       <view class="weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view>
            <view class="weui-label">请输入密码：</view>
          </view>
          <view>
            <input class="weui-input" type="password" placeholder="请输入充值卡密码"/>
          </view>
        </view>
      </view>
      <view class="btn-wrap">
        <button class="dolphin-button-default" type="primary" bindtap="openModal">立即充值</button>
      </view>
    </view>

  </view>
</view>
