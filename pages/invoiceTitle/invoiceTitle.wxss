}



/* modal */
.modal-box{
  position:fixed;
  width:100%;
  height:100%;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background:rgba(0,0,0,0.4);
  overflow: hidden;
  z-index: 99999999;
  }

.modal-body{
  position: relative;
  margin: 0 42rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 40rpx;
  position:relative;
  background: #fff;
  border-radius: 30rpx;
}

.modal-head {
  position: relative;
  padding-bottom: 13rpx;
}
.modal-head::after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #ccc;
  color: #e5e5e5;
  transform-origin: 0 100%;
  transform: scaleY(0.5);
}
.modal-close {
  position: absolute;
  top: 10rpx;
  width: 24rpx;
  height: 24rpx;
}

.modal-title {
  text-align: center;  
  font-size: 40rpx;
}

.modal-content{
  padding: 0 20rpx;
  border-radius: 10rpx;
}

