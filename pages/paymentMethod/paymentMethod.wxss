page {
  /* height: 100vh; */
}
.header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 21rpx;
  height: 170rpx;
  background: #fff;
}
.header-title {
  color: #257CE1;
  font-size: 30rpx;
}
.header-content {
  color:#FF0F0F;
  font-size: 48rpx;
}


/* footer */
.footer {
  position: absolute;
  left: 29rpx;
  right: 29rpx;
  bottom: 71rpx;
}
.pay-footer {
  margin-top: 600rpx
}
/* list */
.dolphin-list-item {
  box-sizing: border-box;
  position: relative;
  padding: 26rpx 30rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.dolphin-list-item::after {
  content: '';
  display: block;
  position: absolute;
  right: 30rpx;
  left: 30rpx;
  bottom: 0;
  height: 1px;
  border-bottom: 1px solid #ccc;
  transform: scaleY(0.5)
}
.dolphin-list-item:last-child::after {
  display: none;
}
.dolphin-list-item-left,.dolphin-list-item-right {
  display: flex;
  align-items: center;
}

.dolphin-list-left-icon {
  margin-right: 21rpx;
  width: 39rpx;
  height: 39rpx;
}
.dolphin-list-caption {
  font-size:28rpx;
  color: #333;
  line-height: 28rpx;
}
.dolphin-list-detail {
  font-size:28rpx;
  color: #999;
}
.dolphin-list-right-icon {
  margin-left: 21rpx;
  width: 35rpx;
  height: 39rpx;
}
/* modal */
.modal-box{
  position:fixed;
  width:100%;
  height:100%;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background:rgba(0,0,0,0.4);
  overflow: hidden;
  z-index: 99999999;
  }

.modal-body{
  position: relative;
  margin: 0 42rpx;
  top: 50%;
  transform: translateY(-65%);
  padding: 40rpx 40rpx 62rpx 40rpx;
  background: #fff;
  border-radius: 30rpx;
}

.modal-head {
  position: relative;
  padding-bottom: 13rpx;
}
.modal-head::after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #ccc;
  color: #e5e5e5;
  transform-origin: 0 100%;
  transform: scaleY(0.5);
}
.modal-close {
  position: absolute;
  top: 18rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.modal-title {
  text-align: center;  
  font-size: 40rpx;
}
.content {
  flex: 1;
  margin-top: 20rpx;
  padding-top: 20rpx;
  background: #fff;
}
.modal-content{
  padding: 0 20rpx;
  border-radius: 10rpx;
}

.content-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 60rpx 0rpx;
  
}
.pay-input {
  width: 200rpx;
  margin: 0 auto;
}
