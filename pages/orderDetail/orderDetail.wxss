.header-text {
  font-size: 24rpx;
  color: #333;
  line-height: 24rpx;
}
.order-list-item-content {
  display: flex;
}
.order-list-item-content-left {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 30rpx;
}
.item-image-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 150rpx;
  height: 150rpx;
  border: 1rpx solid #ccc;
  background: url(http://meatball.org.cn:10000/images/avatar.png) 50% 50% no-repeat;
  background-size: 70%;
 color: #fff;
 font-size: 37rpx;
}
.order-list-item-content-right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: calc(100% - 210rpx);
}
.list-item-right-top {
  display: flex;
  justify-content: space-between;
  padding-right: 32rpx;
  margin-top: 18rpx;
}
.list-item-right-center {
  display: flex;
  justify-content: space-between;
  padding-right: 32rpx;
}
.oil-type {
  font-size: 30rpx;
  color: #257CE1;
}
.oil-price {
  font-size: 28rpx;
  color: #257CE1;
}
.oil-gun {
  font-size: 24rpx;
  color: #666;
}
.oil-integral {
  font-size: 22rpx;
  color: #666;
}
.list-item-right-bottom {
  display: flex;
  flex-direction: column;
  margin-bottom: 16rpx;
  font-size: 22rpx;
  color: #999;
}
.oil-liter {
  line-height: 22rpx;
}

.order-list-item-footer  {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 30rpx 14rpx 10rpx;
  border-top: 1px solid #ccc;
}
