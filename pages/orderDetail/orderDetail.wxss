/* 订单信息 */
.order-list-wrap {
  position: relative;
  padding: 30rpx 30rpx;
}
.order-list-item {
  position: relative;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
  background: #fff;
}
.order-list-item-header{
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 19rpx 20rpx 17rpx 20rpx;
  border-bottom: 1rpx solid #ccc;
}
