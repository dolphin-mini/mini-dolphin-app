.footer-time {
  line-height: 24rpx;
  font-size: 24rpx;
  color: #666;
}
.footer-pay {
  line-height: 28rpx;
  font-size: 28rpx;
}

/* form */
.form-content {
  margin: 30rpx 28rpx;
}
.weui-cells {
  background: transparent;
}
.weui-select {
  border-right: none;
}
.weui-cell_select {
  padding: 10rpx 0px 10rpx 15px !important;
}
.weui-cell_switch {
  padding-top: 20rpx !important;
  padding-bottom: 20rpx !important;
}
.weui-cells:before {
  display: none;
}

.weui-cells:nth-last-child(2)::after {
  display: none;
}

.weui-cell:before {
  display: none;
}
.weui-cell_select::before {
  display: none;
}
.weui-cell_switch::before {
  display: none;
}

.submit-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 0 30rpx 0 55rpx;
  width: 100%;
  height: 134rpx;
  background: #fff;
}
.submit-wrap-left {
  font-size: 28rpx;
}
.RMB {
  color: #f00;
}
.realPay {
  font-size: 36rpx;
  color: #f00;
}
.submit-wrap-right {
  width: 210rpx;
}
/* 优惠信息 */
.message-list-item {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  line-height: 90rpx;
  padding-right: 20rpx;
 
}
.message-list-item::after {
  content: '';
  display: block;
  position: absolute;
  bottom: 0;
  right: 20rpx;
  left: 0;
  height: 1rpx;
  border-bottom: 1rpx solid #ccc;
  transform: scaleY(0.5);
}
.message-list-item:last-child {
  border-bottom: none;
}