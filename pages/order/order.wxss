/* pages/order/order.wxss */


.userinfo-wrap {
  position: relative;
  padding: 29rpx 31rpx 0 37rpx;
  box-sizing: border-box;
  width: 100%;
  height: 270rpx;
  background: url('http://meatball.org.cn:10000/images/order_bg.png') no-repeat;
  background-position: -65rpx -20rpx;
  background-size: 110% 100%;
}

.user-member-wrap {
  display: flex;
  justify-content: flex-end;
  font-size: 24rpx;
  color: #333;
}
.memberText {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}
.memberType {
  color: #F69E29;
}
.memberTips {
  width: 26rpx;
  height: 26rpx;
}

.userWrap {
  display: flex;
  align-items: center;
}
.userAvatar {
  margin-right: 29rpx;
  width: 96rpx;
  height: 119rpx;
  background: url("http://meatball.org.cn:10000/images/avatar.png") no-repeat;
  background-size: 100% 100%;
}
.userinfo-avatar {
  width: 96rpx;
  height: 119rpx;
  border-radius: 100%;
}
.detailWrap {
  font-size: 30rpx;
  color: #000;
  width: 100%;  
}
.text-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.userPhone {
  display: flex;
  justify-content: flex-start;
  margin-top: 14rpx;
  font-size: 26rpx;
  color: #333;
}
.isAuthor {
  margin-left: 24rpx;
  font-size: 20rpx;
  color: #ccc;
}
.userinfo-detail {
  display: flex;
  justify-content: space-around;
  margin-top: 83rpx;
}
.userinfo-detail-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.text-number {
  font-size: 30rpx;
  color: #fff;
  line-height: 30rpx;
}
.text-describe {
  margin-top: 24rpx;
  font-size: 26rpx;
  color: #ccc;
  line-height: 26rpx;
}
/* 导航 */
.order-nav-wrap {
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: -50rpx;
  background: rgba(255,255,255,0.9);
  height: 160rpx;
  box-shadow:0px 10px 19px 2px rgba(204,204,204,0.47);
  border-radius: 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.order-nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.nav-img {

}
.nav-describe {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #333;
}
.order-all {
  width: 46rpx;
  height: 56rpx;
}
.wait-pay {
  width: 60rpx;
  height: 56rpx;
}
.completed {
  width: 60rpx;
  height: 56rpx;
}
.repay {
  width: 50rpx;
  height: 56rpx;
}
/* 订单信息 */
.order-list-wrap {
  position: relative;
  margin-top: 80rpx;
  margin-bottom: 30rpx;
  padding: 0 30rpx;
}
.order-list-item {
  position: relative;
  margin-top: 20rpx;
  box-shadow:0px 0rpx 19rpx 2rpx rgba(204,204,204,0.47);
  border-radius: 20rpx;
}
.order-list-item-header{
  position: relative;
  display: flex;
  align-items: center;
  padding: 19rpx 10rpx 17rpx 10rpx;
  border-bottom: 1rpx solid #ccc;
}
