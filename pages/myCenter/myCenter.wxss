/* pages/myCenter/myCenter.wxss */
/* header style */
.page {
  display: flex;
  flex-direction: column;
  height:100vh;
}
.header {
  background: url(http://meatball.org.cn/assest/images/header_bg.png) -85rpx -15rpx;
  background-size: 120% 120%;
  height: 375rpx;
}
.header-nav-img {
  margin-bottom: 26rpx;
  width: 65rpx;
  height: 60rpx;
}
.header-item {
  display: flex;
  margin: 0 30rpx;
  background: #fff;
  height: 185rpx;
  box-shadow:0rpx 10rpx 19rpx 2rpx rgba(204,204,204,0.47);
  border-radius:20rpx;
}
.userinfo-detail {
  display: flex;
  justify-content: space-around;
  margin-top: 55rpx;
}
.userinfo-detail-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 150rpx;
}
.text-number {
  margin-bottom: 31rpx;
  font-size: 30rpx;
  color: #fff;
  line-height: 30rpx;
}
.text-describe {
  margin-bottom: 31rpx;
  font-size: 26rpx;
  color: #ccc;
  line-height: 26rpx;
}
.logo-wrap-left, .logo-wrap-right {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: center */
}
.logo-wrap-left::after {
  content: '';
  display: block;
  position: absolute;
  right: 0;
  top: 30rpx;
  bottom: 30rpx;
  width: 1rpx;
  border-right: 1rpx solid #257CE1;
  transform: scaleX(0.5)

}
.header-logo {
  margin-top: 31rpx;
  margin-bottom: 19rpx;
  width: 76rpx;
  height: 77rpx;
}
.logo-text {
  font-size: 30rpx;
  color: #333;
}
/* list style */
.modify-input-wrap {
  display: flex;
  align-items: center;
  margin-bottom: 26rpx;
  font-size: 30rpx;
  color: #333;
}
/* .modify-input-label {
  display: inline-block;
  overflow: hidden;
  text-align: justify;
  vertical-align: top;
  height: 50rpx;
  width: 120rpx;
} */
.modify-input-label {
  height: 50rpx;
  width: 120rpx;
  text-align: justify;
  text-align-last: justify;
}
.modify-input-label::after {
  content: "";
  display: inline-block;
  width: 100%;
  height: 0;
}
.modify-input-label-wrap {
  display: flex;
  align-items: center;
  width: 180rpx;
  margin-left: 40rpx;
}
.modify-input-text-wrap {
  position: relative;
  display: flex;
  width: 270rpx;
  height: 52rpx;
}
.modify-input-text-wrap::after {
  display: block;
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  height: 200%;
  width: 200%;
  border: 1rpx solid #257CE1;
  color: #e5e5e5;
  transform-origin: 0 100%;
  border-radius: 10rpx;
  transform: scale(0.5);
}
.modify-input {
  margin-left: 20rpx;
  color: #666666;
  font-size: 26rpx;
}
.picker-input {
  margin-right: 60rpx;
}
.drop-down {
  position: absolute;
  right: 10rpx;
  top: 50%;
  transform: translateY(-50%);
}
.modify-btn {
  margin-left: 16rpx;
  font-size: 22rpx;
  color: #999;
}

.button-wrap {
  position: absolute;
  bottom: 60rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  width: calc(100% - 60rpx);
}
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(to right, #4D9BFD , #496AF2);
  box-shadow: 1px 5px 15px rgba(37, 124, 255, 0.47);
  font-size: 30rpx;
  height: 90rpx;
}

/* modal */
.modal-box{
  position:fixed;
  width:100%;
  height:100%;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background:rgba(0,0,0,0.4);
  overflow: hidden;
  z-index: 99999999;
  }

.modal-body{
  position: relative;
  margin: 0 42rpx;
  top: 50%;
  transform: translateY(-65%);
  padding: 40rpx 40rpx 62rpx 40rpx;
  background: #fff;
  border-radius: 30rpx;
}

.modal-head {
  position: relative;
  padding-bottom: 13rpx;
}
.modal-head::after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #ccc;
  color: #e5e5e5;
  transform-origin: 0 100%;
  transform: scaleY(0.5);
}
.modal-close {
  position: absolute;
  top: 18rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.modal-title {
  text-align: center;  
  font-size: 40rpx;
}
.content {
  flex: 1;
  margin-top: 87rpx;
  padding-top: 20rpx;
}
.modal-content{
  padding: 0 20rpx;
  border-radius: 10rpx;
}

.content-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 60rpx 0rpx;
  
}
.editor-input {
  height:50rpx;
  font-size:30rpx;
  padding-left:24rpx;
  border-left:1rpx solid #999;

}
.modal-content .fenxiang{
  width: 100%;
}
.footer-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(to right, #4D9BFD , #496AF2);
  box-shadow: 1px 5px 15px rgba(37, 124, 255, 0.47);
  font-size: 30rpx;
  height: 90rpx;
}